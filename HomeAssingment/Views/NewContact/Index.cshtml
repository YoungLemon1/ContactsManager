@model HomeAssignment.Models.Contact

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script>
	$(document).ready(function () {
		// function to sanitize input and remove escape characters
		function sanitizeInput(input) {
			// list of escape characters to remove
			const escapeChars = /[<>"/'\\?!&=]/g;

			// remove any escape characters from the input
			return input.replace(escapeChars, '');
		}

		// get all the input fields inside the form
		const inputs = $('form input');
		const idInput = $('form input#id');

		inputs.each(function () {
			$(this).on('input', function () {
				if ($(this).is(idInput)) {
					const value = $(this).val();
					if (!/^\d+$/.test(value)) {
						$(this).val(value.substring(0, value.length - 1));
						return;
					}
				}
				const sanitizedInput = sanitizeInput($(this).val());
				$(this).val(sanitizedInput);
			});
		});
	});
</script>
<h2>New Contact</h2>
<div id="error-message">@TempData["ErrorMessage"]</div>
<form asp-action="CreateContact" class="form-control" id="new-contact-form">
	<div>
		<label for="id">Id</label>
		<input id="id" name="id" type="text" asp-for=Id maxlength="9" required />
		<span asp-validation-for="Id" class="text-danger"></span>
	</div>
	<div>
		<label for="first-name">First Name</label>
		<input id="first-name" type="text" asp-for=FirstName required />
		<span asp-validation-for="FirstName" class="text-danger"></span>
	</div>
	<div>
		<label for="last-name">Last Name</label>
		<input id="last-name" type="text" asp-for=LastName required />
		<span asp-validation-for="LastName" class="text-danger"></span>
	</div>
	<div>
		<label for="birth-date">Birth Date</label>
		<input id="birth-date" type="date" asp-for=BirthDate />
		<span asp-validation-for="BirthDate" class="text-danger"></span>
	</div>
	<div>
		<label for="city">City</label>
		<input id="city" type="text" asp-for=City />
		<span asp-validation-for="City" class="text-danger"></span>
	</div>
	<div>
		<label for="street">Street</label>
		<input id="street" type="text" asp-for=Street />
		<span asp-validation-for="Street" class="text-danger"></span>
	</div>
	<div>
		<label for="house-number">House Number</label>
		<input id="house-number" type="number" asp-for=HouseNumber />
		<span asp-validation-for="HouseNumber" class="text-danger"></span>
	</div>
	<div>
		<label for="phone-at-home">Phone at Home</label>
		<input id="phone-at-home" type="text" asp-for=PhoneAtHome maxlength="10" />
		<span asp-validation-for="PhoneAtHome" class="text-danger"></span>
	</div>
	<div>
		<label for="phone">Phone</label>
		<input id="phone" type="text" asp-for=Phone maxlength="10" />
		<span asp-validation-for="Phone" class="text-danger"></span>
	</div>
	<button class="btn btn-success" type="submit">Save contact</button>
</form>